@page
@model API.Pages.LoginRegisterModel
@{
    ViewData["Title"] = "Home page";
}
<h1>Reversi</h1>
<h4>Registreren</h4>
<div class="text-danger">@Model.RegisterErrorMessage</div>
<form method="post" asp-page-handler="register">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Player.Avatar" class="control-label"></label>
        <input asp-for="Player.Avatar" class="form-control" />
        <span asp-validation-for="Player.Avatar" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Player.EmailAddress" class="control-label"></label>
        <input asp-for="Player.EmailAddress" class="form-control" />
        <span asp-validation-for="Player.EmailAddress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Player.PassPhrase" class="control-label"></label>
        <input type="password" asp-for="Player.PassPhrase" class="form-control" />
        <span asp-validation-for="Player.PassPhrase" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Registreren" class="btn btn-primary" />
    </div>
</form>

<h4>Inloggen</h4>
<div class="text-danger">@ViewData["LoginErrorMessage"]</div>
<form method="post" asp-page-handler="login">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Avatar" class="control-label"></label>
        <input asp-for="Avatar" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EmailAddress" class="control-label"></label>
        <input asp-for="EmailAddress" class="form-control" />
        <span asp-validation-for="EmailAddress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PassPhrase" class="control-label"></label>
        <input type="password" asp-for="PassPhrase" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Inloggen" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
